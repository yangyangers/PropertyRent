<!--_DeletePartial.cshtml-->
@model PropertyRent.Models.Property

<div class="text-center">
    <h5>Are you sure you want to delete this property?</h5>
    <p class="text-danger">This action cannot be undone.</p>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Location</h6>
            <p class="card-text text-primary">₱@Model.RentalPrice.ToString("N0")/month</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>